{
    "extends": "./tsconfig.app.json",
    "compilerOptions": {
        "module": "es2020", 
        "target": "esnext",
        "jsx": "react-jsx",
        "types": [
            "jest",
            "node"
        ],
        "verbatimModuleSyntax": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src",
        "**/*.test.ts",
        "**/*.test.tsx"
    ]
}